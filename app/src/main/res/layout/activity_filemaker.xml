<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A3344">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Create  File"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:text="File name  : "
            android:textColor="@android:color/white" />


        <EditText
            android:id="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edit_background"
            android:hint="file name"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/tertiary_text_light" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:textSize="16sp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="File Content  :"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/file_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edit_background"
            android:gravity="top"
            android:hint="Your Content Here"
            android:maxLines="4"
            android:minLines="4"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/tertiary_text_light" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/sync_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt2_background"

                android:text="Syc now"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_background"

                android:text="Connect"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/add_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_background"
                android:text="Add File"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp">


            <Button
                android:id="@+id/show_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:padding="5dp"
                android:text="Show file"
                android:textColor="@android:color/white" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <Button
                android:id="@+id/show_accountlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:padding="5dp"
                android:text="Show Account"
                android:textColor="@android:color/white" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/show_localfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:padding="5dp"
                android:text="Local file"
                android:textColor="@android:color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cbAutoSync"
                style="@style/WhiteCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="4dp"
                android:text="Auto Sync"
                android:textColor="@android:color/white" />

            <CheckBox
                android:id="@+id/cbIsSyncable"
                style="@style/WhiteCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="4dp"
                android:text="isSyncable"
                android:textColor="@android:color/white" />


            <TextView
                android:id="@+id/file_name_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#2d8659"
                android:gravity="left"
                android:padding="4dp"
                android:text=" FILES LIST"
                android:textColor="@android:color/white"

                android:textSize="15dp"
                android:textStyle="italic" />

        </LinearLayout>

        <TextView
            android:id="@+id/login_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:enabled="false"
            android:padding="10dp"
            android:text="Status: Unknown"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/sync_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:enabled="false"
            android:padding="10dp"
            android:text="Status: Unknown"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/list_item_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>
</ScrollView>